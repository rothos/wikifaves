{
  "manifest_version": 3,
  "name": "WikiFaves",
  "version": "1.0",
  "description": "Save your favorite Wikipedia articles",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.wikipedia.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.wikipedia.org/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 